{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "xbo-market-kit/ticker",
	"version": "0.1.0",
	"title": "XBO Ticker",
	"category": "xbo-market-kit",
	"icon": "chart-line",
	"description": "Live cryptocurrency ticker widget showing price and 24h change.",
	"textdomain": "xbo-market-kit",
	"attributes": {
		"symbols": {
			"type": "string",
			"default": "BTC/USDT,ETH/USDT"
		},
		"refresh": {
			"type": "string",
			"default": "15"
		},
		"columns": {
			"type": "string",
			"default": "4"
		}
	},
	"supports": {
		"html": false
	},
	"render": "file:./render.php"
}
