{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "xbo-market-kit/trades",
	"version": "0.1.0",
	"title": "XBO Recent Trades",
	"category": "xbo-market-kit",
	"icon": "list-view",
	"description": "Recent trades feed with color-coded buy/sell indicators.",
	"textdomain": "xbo-market-kit",
	"attributes": {
		"symbol": {
			"type": "string",
			"default": "BTC/USDT"
		},
		"limit": {
			"type": "string",
			"default": "20"
		},
		"refresh": {
			"type": "string",
			"default": "10"
		}
	},
	"supports": {
		"html": false
	},
	"render": "file:./render.php"
}
