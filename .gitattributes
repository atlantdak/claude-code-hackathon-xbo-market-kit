# Auto detect text files and normalize line endings
* text=auto

# Force LF
*.php text eol=lf
*.js text eol=lf
*.css text eol=lf
*.md text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Export ignore (not included in GitHub archive downloads)
.idea/ export-ignore
docs/ export-ignore
tests/ export-ignore
scripts/ export-ignore
.editorconfig export-ignore
.gitattributes export-ignore
CLAUDE.md export-ignore
phpcs.xml export-ignore
phpstan.neon export-ignore
phpunit.xml export-ignore
